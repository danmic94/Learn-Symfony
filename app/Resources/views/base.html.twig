{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    {% block stylesheets %}
        <link href="{{ asset('bundles/toy/css/main.css') }}" rel="stylesheet" />
    {% endblock %}
    <title>{% block title %}Test Application{% endblock %}</title>
</head>
<body>
<div id="sidebar">

    {{ render(controller(
    'AcmeArticleBundle:Article:recentArticles',
    { 'max': 3 }
    )) }}

    {% block sidebar %}
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Blog</a></li>
        </ul>
    {% endblock %}
</div>
<div id="content">
    {% block body %}{% endblock %}
</div>

</body>